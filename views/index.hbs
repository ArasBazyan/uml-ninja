<!DOCTYPE html>
<html>
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <head>

<style>
  body {
      font-family: Avenir, sans-serif;
      margin: 0;
      height: 100%;
      width: 100%;
  }

  /*  Particles.js container.
  Taken and modified from https://codepen.io/technovore/pen/aOdGjY
  */

  #particles-js {
      position: fixed;
      height: 200%;
      width: 100%;
      background-color: #000000;
      background-image: url("");
      background-repeat: no-repeat;
      background-size: cover;
      background-position: 50% 50%;
      z-index: -1;
  }

  .center {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 40%;

      /* bring your own prefixes */
      transform: translate(-50%, -50%);
  }

  .center:after {
      background-color: white;
      width: 100%;
      height: 100%;
      content: '';
      /* display: block; */
      position: fixed;
      top: 10px;
      /* left: 10px; */
      /* right: 10px; */
      /* bottom: 10px; */
      z-index: -1;
      /* margin: 20% auto 0 auto; */
      /* position: fixed; */
      /* top: 50%; */
      /* left: 50%; */
      opacity: 0.15;
      /* padding: 10px 0 50px 54px; */


  }

  button {
      box-sizing: border-box;
      display: inline-block;
      background: #deba00;
      color: #1F1F1C;
      border: none;
      margin-right: 0.7rem;
      padding: 0 1.5rem;
      font-size: 0.9rem;
      line-height: 3rem;
      font-weight: 400;
      cursor: pointer;
  }

  button:hover{
      opacity: 0.9;
  }

  .p100d {
      font-size: 0.9rem;

      font-family: Avenir, sans-serif;
      width: 100%;
      height: 50px;
      margin-top: 10px;
      display: block;
      border: none;
      text-align: center;
  }

</style>

  </head>
	<body>
    <div id="particles-js"></div>

    <section class="center">
        <p id="repoDetails" style="color: white; margin: 40px auto; text-align: center; height:50%">  Please enter a Github username </p>
        <div>
            <input class="p100d" type="text" placeholder="Github Username" id="term"><br>
            <button id="search" class="p100d">Search</button>
            <button id="showRepos" class="p100d">Show Test Repos</button>
        </div>
        <p id="testRepos" style="color: white; margin: 20px auto; text-align: center;"></p>
    </section>

    <div id="username"></div>



    <script type="text/javascript">


        /* ---- particles.js config ---- */

        particlesJS("particles-js", {
            "particles": {
                "number": {
                    "value": 100,
                    "density": {
                        "enable": true,
                        "value_area": 1000
                    }
                },
                "color": {
                    "value": "#deba00"
                },
                "shape": {
                    "type": "star",
                    "stroke": {
                        "width": 0,
                        "color": "#deba00"
                    },
                    "polygon": {
                        "nb_sides": 5
                    },
                    "image": {
                        "src": "img/github.svg",
                        "width": 100,
                        "height": 100
                    }
                },
                "opacity": {
                    "value": 0.3,
                    "random": false,
                    "anim": {
                        "enable": false,
                        "speed": 1,
                        "opacity_min": 0.1,
                        "sync": false
                    }
                },
                "size": {
                    "value": 2,
                    "random": true,
                    "anim": {
                        "enable": false,
                        "speed": 40,
                        "size_min": 0.1,
                        "sync": false
                    }
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#deba00",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 5,
                    "direction": "none",
                    "random": false,
                    "straight": false,
                    "out_mode": "out",
                    "bounce": false,
                    "attract": {
                        "enable": false,
                        "rotateX": 600,
                        "rotateY": 1200
                    }
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": true,
                        "mode": "grab"
                    },
                    "onclick": {
                        "enable": true,
                        "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "grab": {
                        "distance": 140,
                        "line_linked": {
                            "opacity": 1
                        }
                    },
                    "bubble": {
                        "distance": 400,
                        "size": 40,
                        "duration": 2,
                        "opacity": 8,
                        "speed": 3
                    },
                    "repulse": {
                        "distance": 200,
                        "duration": 0.4
                    },
                    "push": {
                        "particles_nb": 4
                    },
                    "remove": {
                        "particles_nb": 2
                    }
                }
            },
            "retina_detect": true
        });



$(document).ready(function(){
    $("#showRepos").click(function(){
      $.getJSON("http://localhost:3000/projectData", function(result){
          console.log(result)
          var index = 0;
          console.log(result.length)
          for (var i = 0; i < result.length; i++) {
            $("#testRepos").append("<li id=" + i + ">" + result[i].ProjectName + "</li>");
          }
        // clickable repo name
        $("#testRepos").children().click(function(){
            // selected repo
            var repoChoice = $(this.id);
            var pid = $("#"+this.id).attr('id');
            pid = parseInt(pid) + 1;
            console.log(pid);
            //alert(repoChoice);
           window.location = "/dash/" + pid;
        });
    });

});

$("#openNav").hide();

    // execute when user clicks on search button
    $("#search").click(function(){
        // find out the searchterm
        var searchterm = $("#term").val() ? $("#term").val() : "github";
        //alert(searchterm);
        // get user
        function getUserData(callback) {
            $.get("https://api.github.com/users/" + searchterm,
                function(data, status){
                    console.log(status);

                    success: callback(data, status);
                });
        };

        // get repos
        function getUserRepos(callback){
            $.get("https://api.github.com/users/" + searchterm + "/repos",
                    function(data, status){
                        console.log(status);
                        success: callback(data,status);
                    });
        };

        // callback function to show repos
        function showRepos(data, status){
            console.log(status);
            for (var i = 0; i < data.length; i++) {
                $("#repoDetails").append("<li id='repo" + i + "'>" + data[i].name + "</li>");
            };

            // function when user clicks a repo choice
            $("#repoDetails").children().click(function(){

                // clear out any prior details - no longer required
                // $("#langDetails").children().remove();

                // get the chosen repo id by reference to the id of the element in list that was clicked
                var repoChoice = $("#"+this.id).html();

                alert(repoChoice);



            });
        };

        getUserRepos(showRepos);
    });

});
    </script>
    </body>
</html>
